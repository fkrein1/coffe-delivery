generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Coffee {
  id             String           @id @default(uuid())
  name           String           @unique
  type           String
  price          Float
  description    String
  image          String
  CoffesOnOrders CoffesOnOrders[]

  @@map("coffee")
}

model Order {
  id             String           @id @default(uuid())
  cep            String
  street         String
  number         String?
  complement     String?
  neighborhood   String
  city           String
  uf             String
  paymentMethod  String
  CoffesOnOrders CoffesOnOrders[]

  @@map("order")
}

model CoffesOnOrders {
  order    Order  @relation(fields: [orderId], references: [id])
  orderId  String
  coffee   Coffee @relation(fields: [coffeeId], references: [id])
  coffeeId String
  quantity Int

  @@id([orderId, coffeeId])
  @@map("coffees_orders")
}
